{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist/server",
    "target": "es2015",
    "lib": ["es2017", "dom"],
    "sourceMap": true,
    "inlineSourceMap": false,
    "allowJs": true,
    "jsx": "react",
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "jest"],
    "noEmitOnError": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "importHelpers": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/__tests__"
  ]
}
