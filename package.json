  "description": "",
  "main": "index.js",
  "scripts": {
    "test:app": "jest --testPathPattern=src/__tests__/app --watch --all",
    "test:webapp": "npx testcafe chrome --live",
    "build": "tsc && npm run webapp:build",
    "start": "NODE_ENV=production WEBAPP_BUILD_ENV=production WEBAPP_COMPRESSION=true node ./dist/server/app.js",
    "server": "node -r ts-node/register -- ./src/app.ts",
    "server:watch": "npx nodemon -e ts,tsx,js -w ./src -x npm run server",
    "webapp:build": "WEBAPP_BUILD_ENV=production npx npm-run-all -p -n webapp:code:build webapp:styles:build",
    "webapp:watch": "npx npm-run-all -p -n webapp:code:watch webapp:styles:watch",
    "webapp:code:build": "npx webpack --config webpack.${WEBAPP_BUILD_ENV}.js",
    "webapp:code:watch": "npx webpack --progress --config webpack.dev.js --watch",
    "webapp:styles:build": "npx gulp build",
    "webapp:styles:watch": "npx gulp watch"
  },
  "repository": {
    "type": "git",
